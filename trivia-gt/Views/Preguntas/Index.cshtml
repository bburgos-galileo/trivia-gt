@model trivia_gt.Models.PreguntaBE

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Grabar" class="form-horizontal">
            @Html.HiddenFor(model => model.idPregunta, new { @id = "hdIdPregunta" })
            <div class="form-group">
                <h4 class="h4 text-success">@Model.pregunta</h4>
            </div>


            @foreach (var item in Model.respuestas)
            {
                <div class="form-check">
                    @Html.RadioButtonFor(model => model.idRespuesta, item.idRespuesta, new { @class = "form-check-input", id = item.idRespuesta})


                    <label class="form-check-label" for="@item.idRespuesta">@item.text</label>
                </div>
            }


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
